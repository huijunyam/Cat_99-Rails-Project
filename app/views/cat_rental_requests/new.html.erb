<h1> Add Request </h1>

<form action="/cat_rental_requests" method="post">
  <label for="cat_id">Cat ID</label>
  <select name="cat_rental_request[cat_id]" id="cat_id">
    <% Cat.all.each do |cat| %>
      <option value="<%= cat.id %>"><%= cat.name %></option>
    <% end  %>
  </select>

  <br>
  <br>

  <label for="start_date">Enter a start date</label>
  <input type="date" name="cat_rental_request[start_date]">

  <br>
  <br>

  <label for="end_date">Enter a end date</label>
  <input type="date" name="cat_rental_request[end_date]">

  <input type="submit" value="add request" >
</form>
